generator client {
    provider = "prisma-client-js"
    output   = "./generated"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum BwtChoice {
    WHATSAPP
    PHONE
    TEXT
}

model Appointment {
    id       Int       @id @default(autoincrement())
    name     String    @db.VarChar(50)
    surname  String    @db.VarChar(50)
    address  String    @db.VarChar(255)
    job_desc String
    bwt      BwtChoice
    number   String?   @unique @db.VarChar(20)
    duration Int       @default(1) // hours

    @@map("appointment")
}

enum CategoryChoice {
    PLUMBING
    ASSEMBLING
    MOUNTING
}

model Work {
    id        Int            @id @default(autoincrement())
    img_urls  String[]       @unique @db.VarChar(2800)
    img_id    String         @unique @db.VarChar(50)
    category  CategoryChoice
    timestamp DateTime       @default(now())

    @@map("work")
}
