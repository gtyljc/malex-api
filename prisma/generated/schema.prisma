generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BwtChoice {
  WHATSAPP
  PHONE
  TEXT
}

enum Role {
  USER
  ADMIN
  SUPERUSER // backend
}

model Appointment {
  id        Int       @id @default(autoincrement())
  name      String    @db.VarChar(50)
  surname   String    @db.VarChar(50)
  address   String    @db.VarChar(255)
  job_desc  String
  bwt       BwtChoice
  number    String?   @unique @db.VarChar(20)
  duration  Float     @default(1) // hours
  date      DateTime  @unique
  completed Boolean   @default(false)
}

enum CategoryChoice {
  PLUMBING
  ASSEMBLING
  MOUNTING
}

model Work {
  id        Int            @id @default(autoincrement())
  img_url   String         @db.VarChar(2800)
  img_id    String         @unique @db.VarChar(50)
  category  CategoryChoice
  timestamp DateTime       @default(now())
}

model SiteConfig {
  id            Int      @id @default(autoincrement())
  opening_at    DateTime @default(now()) @db.Timestamp(0)
  closing_at    DateTime @default(now()) @db.Timestamp(0)
  min_duration  Float    @default(0.5)
  support_email String   @default("support@malexhandy.com")
  phone_number  String   @default("3474101444")
}

model Admin {
  id        String  @id @default(nanoid(8))
  username  String
  password  String
  is_logged Boolean
  fullname  String
}

model RefreshToken {
  id         Int      @id @default(autoincrement())
  hash       String
  created_at DateTime @default(now()) @db.Timestamp(0)
  expired_at DateTime @db.Timestamp(0)
  is_revoked Boolean  @default(false)
  audience   Role
}
