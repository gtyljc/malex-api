generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BwtChoice {
  WHATSAPP
  PHONE
  TEXT
}

enum Role {
  GUEST
  USER
  ADMIN
  SUPERUSER // backend
  SUPERADMIN
}

model Appointment {
  id        String    @id @default(nanoid(10))
  name      String    @db.VarChar(50)
  surname   String    @db.VarChar(50)
  address   String    @db.VarChar(255)
  job_desc  String    @db.VarChar(500)
  bwt       BwtChoice
  number    String?   @db.VarChar(20)
  duration  Float     @default(1) // hours
  date      DateTime  @unique
  completed Boolean   @default(false)
}

enum CategoryChoice {
  PLUMBING
  ASSEMBLING
  MOUNTING
}

model Work {
  id        String         @id @default(nanoid(16))
  img_url   String         @db.VarChar(2800)
  img_id    String         @unique @db.VarChar(50)
  category  CategoryChoice
  timestamp DateTime       @default(now())
}

model SiteConfig {
  id            String   @id @default("1")
  opening_at    DateTime @default(now()) @db.Timestamp(0)
  closing_at    DateTime @default(now()) @db.Timestamp(0)
  min_duration  Float    @default(0.5)
  support_email String   @default("support@malexhandy.com")
  phone_number  String   @default("3474101444")
}

model Admin {
  id        String  @id @default(nanoid(16))
  username  String  @db.VarChar(50)
  password  String  @db.VarChar(50)
  is_logged Boolean @default(false)
  fullname  String  @db.VarChar(50)
  user      User    @relation(fields: [user_id], references: [id])
  user_id   String  @unique
}

model User {
  id       String @id @default(nanoid(16))
  username String @db.VarChar(50)
  password String @db.VarChar(50)
  admin    Admin?
}

model RefreshToken {
  id         String   @id @default(nanoid(16))
  hash       String   @unique
  created_at DateTime @default(now()) @db.Timestamp(0)
  expired_at DateTime @db.Timestamp(0)
  is_revoked Boolean  @default(false)
  role       Role
  user_id    String   @db.VarChar(16)
}
